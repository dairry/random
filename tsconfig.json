{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "rootDir": "./src",
    "declaration": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "index.d.ts",
    "src/**/*"
  ],
  "exclude": [
    ".cache",
    ".git",
    "dist",
    "node_modules",
    "public",
    "tools",
    "*.test.tsx"
  ],
  "files": ["index.d.ts"]
}
